<div class="contents">
<br><h1>全てのタスク</h1><br>
  <ul style="list-style: none;"
    <% @tasks.each do |task| %>
    <li><%= task.limit_date %> <%= task.content %>
      <%= link_to image_tag("done.png", alt: "Done", :size => "25x25"), task, method: :delete %>
