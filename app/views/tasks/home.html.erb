      <hr width="100%", align="left">
      <%  end %>
  </ul>
</div>
<div class="sidenavi">
<ul style="list-style: none;">
  <br><br>
  <li><%= link_to '＋タスクの追加', new_path %></li>
  <li><%= link_to '＋プロジェクトの追加', :controller => "projects", :action => "new"%></li>
  <br>
  <li><%= link_to '今日', '#' %></li>
  <li><%= link_to '７日以内', '#' %></li>
  <li><%= link_to '全て', root_path %></li>
  <hr width="90%", align="left">
  <li>プロジェクト</li>
  <% @project.each do |p|%>
  <li>
    <%= link_to "#{p.name}", :controller => "pages", :action => "by_project" , id: p.id %>
</li>
  <% end %>
</ul>
</div>
</div>
